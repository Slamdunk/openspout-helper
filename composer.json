{
    "name": "slam/openspout-helper",
    "description": "PhpSpreadsheet helper to create organized data table",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Filippo Tessarotto",
            "email": "zoeslam@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~8.4.0 || ~8.5.0",
        "openspout/openspout": "^5.2.1"
    },
    "require-dev": {
        "infection/infection": "^0.32.2",
        "phpoffice/phpspreadsheet": "^5.3.0",
        "phpstan/phpstan": "^2.1.33",
        "phpstan/phpstan-phpunit": "^2.0.11",
        "phpunit/phpunit": "^12.5.4",
        "slam/php-cs-fixer-extensions": "^3.14.0"
    },
    "autoload": {
        "psr-4": {
            "Slam\\OpenspoutHelper\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Slam\\OpenspoutHelper\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
