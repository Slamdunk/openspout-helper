{
    "name": "slam/openspout-helper",
    "description": "PhpSpreadsheet helper to create organized data table",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Filippo Tessarotto",
            "email": "zoeslam@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0",
        "openspout/openspout": "^4.19.0"
    },
    "require-dev": {
        "infection/infection": "^0.27.6",
        "phpoffice/phpspreadsheet": "^1.29.0",
        "phpstan/phpstan": "^1.10.39",
        "phpstan/phpstan-phpunit": "^1.3.15",
        "phpunit/phpunit": "^10.4.1",
        "slam/php-cs-fixer-extensions": "^3.9"
    },
    "autoload": {
        "psr-4": {
            "Slam\\OpenspoutHelper\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Slam\\OpenspoutHelper\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
