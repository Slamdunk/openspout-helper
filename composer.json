{
    "name": "slam/openspout-helper",
    "description": "PhpSpreadsheet helper to create organized data table",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Filippo Tessarotto",
            "email": "zoeslam@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~8.3.0 || ~8.4.0",
        "openspout/openspout": "^4.28.2"
    },
    "require-dev": {
        "infection/infection": "^0.29.8",
        "phpoffice/phpspreadsheet": "^3.5.0",
        "phpstan/phpstan": "^2.0.3",
        "phpstan/phpstan-phpunit": "^2",
        "phpunit/phpunit": "^11.5.0",
        "slam/php-cs-fixer-extensions": "^3.12.0"
    },
    "autoload": {
        "psr-4": {
            "Slam\\OpenspoutHelper\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Slam\\OpenspoutHelper\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
