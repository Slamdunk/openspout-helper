{
    "name": "slam/openspout-helper",
    "description": "PhpSpreadsheet helper to create organized data table",
    "license": "MIT",
    "authors": [
        {
            "name": "Filippo Tessarotto",
            "email": "zoeslam@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0",
        "openspout/openspout": "^4.12.1"
    },
    "require-dev": {
        "infection/infection": "^0.26.19 || ^0.27.0",
        "phpoffice/phpspreadsheet": "^1.27.1",
        "phpstan/phpstan": "^1.9.17",
        "phpstan/phpstan-phpunit": "^1.3.4",
        "phpunit/phpunit": "^10.0.7",
        "slam/php-cs-fixer-extensions": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Slam\\OpenspoutHelper\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Slam\\OpenspoutHelper\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
